<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiquiCycle_FuncionarioPosto.Views.Account.LoginView"
             Title=""
             Style="{StaticResource NoTitleBarPageStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!--  Primeira linha que ocupa 30% do espaço  -->
            <RowDefinition Height="6*" />
            <!--  Segunda linha que ocupa o espaço restante (70%)  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!--  Primeira coluna com largura automática  -->
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0">
            <Image
            HorizontalOptions="Center"
            Source="colaborator_logo.png" 
            TranslationY="10"
            Margin="0,20,0,0" />
        </Grid>

        <!--  Conteúdo da segunda linha  -->
        <ScrollView
            Grid.Row="1"
            Padding="20"
            BackgroundColor="White"
            VerticalOptions="FillAndExpand">

            <VerticalStackLayout>

                <Label
                    Margin="40"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Bem Vindo!"
                    VerticalOptions="Center" />

                <Label
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="Entre na sua conta" />
                <Border Margin="0,15,0,0">
                    <Entry
                        x:Name="EntryLogin"
                        Margin="15,0,15,0"
                        HeightRequest="70"
                        Keyboard="Text"
                        Placeholder="Login"
                        TextColor="Black" />
                </Border>

                <Border Margin="0,10,0,0">
                    <Entry
                        x:Name="EntrySenha"
                        Margin="15,0,15,0"
                        HeightRequest="70"
                        IsPassword="True"
                        Placeholder="Senha"
                        TextColor="Black" />
                </Border>

                <Button
                    BackgroundColor="Transparent"
                    Clicked="NavigationForgotPassword"
                    FontSize="16"
                    HorizontalOptions="End"
                    Text="Esqueceu a senha?"
                    TextColor="Black" />

                <Button
                    Margin="10,30"
                    Padding="20"
                    BackgroundColor="#FF007A"
                    TextColor="White"
                    Clicked="LoginPost"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="Login" />

                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Não tem uma conta? " />
                            <Span FontAttributes="Bold" Text="Cadastre-se" />
                        </FormattedString>
                    </Label.FormattedText>
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="NavigationCreateUser" />
                    </Label.GestureRecognizers>
                </Label>


            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>