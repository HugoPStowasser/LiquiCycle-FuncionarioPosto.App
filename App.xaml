<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LiquiCycle_FuncionarioPosto"
             x:Class="LiquiCycle_FuncionarioPosto.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="ContentPage" x:Key="NoTitleBarPageStyle">
                <Setter Property="NavigationPage.HasNavigationBar" Value="False" />
                <Setter Property="NavigationPage.HasBackButton" Value="False" />
            </Style>

            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor"
                    Value="#ECECEC" />
                <Setter Property="Shell.TabBarTitleColor"
                    Value="#FF007A" />
                <Setter Property="Shell.TabBarUnselectedColor"
                    Value="#5F5F5F" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
